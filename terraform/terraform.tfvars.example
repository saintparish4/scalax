# ================================================================================
# FILE: terraform/terraform.tfvars.example
# ================================================================================

# AWS Configuration
aws_region   = "us-east-1"
project_name = "rate-limiter"
environment  = "dev"

# Networking
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
private_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
public_subnet_cidrs  = ["10.0.101.0/24", "10.0.102.0/24"]

# DynamoDB - Use PAY_PER_REQUEST for dev, PROVISIONED for prod
dynamodb_billing_mode   = "PAY_PER_REQUEST"
dynamodb_read_capacity  = 5   # Only used if PROVISIONED
dynamodb_write_capacity = 5   # Only used if PROVISIONED

# Kinesis
kinesis_shard_count     = 1
kinesis_retention_hours = 24
enable_kinesis_firehose = false  # Enable for analytics pipeline
kinesis_s3_bucket       = ""     # Required if firehose enabled

# ECS Configuration
container_image   = "123456789012.dkr.ecr.us-east-1.amazonaws.com/rate-limiter-platform:latest"
ecs_desired_count = 2
ecs_cpu           = 256
ecs_memory        = 512

# Auto-scaling
enable_autoscaling = true
ecs_min_capacity   = 2
ecs_max_capacity   = 10

# Monitoring - Provide SNS topic ARN for alerts
alarm_sns_topic_arn = ""  # e.g., "arn:aws:sns:us-east-1:123456789012:alerts"
